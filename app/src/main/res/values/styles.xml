<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewComum" >
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/texto_padrao</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="TextViewTitulo">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/texto_titulo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSecundaria">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/texto_padrao</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/texto_padrao</item>
    </style>

    <style name="BotaoElevado">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">88dp</item>
    </style>

</resources>
